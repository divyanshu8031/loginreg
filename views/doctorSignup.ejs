        <div>
            <div>
                <% if(message.doctor_signup_error){ %>
                    <div class="alert alert-danger">
                        <strong>Registeration Failed!</strong> <%=message.doctor_signup_error%>
                    </div>
                <% } %>
            </div>
            <div class="container">
                
                <div class="user signupBx">
                    
                    <div class="formBx">
                        
