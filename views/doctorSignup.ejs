        <style>
            @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
  
  *{
  
      margin: 0;
  
      padding: 0;
  
      box-sizing: border-box;
  
      font-family: "Poppins", sans-serif;
  
  }
  
  ::-webkit-scrollbar {
  
      display: none;
  
  }
  
  section
  
  {
  
      position: relative;
  
      min-height: 100vh;
  
      background: white;
  
      display: flex;
  
      justify-content: center;
  
      align-items: center;
  
      padding: 20px;
  
  }
  
  section .container
  
  {
  
      position: relative;
  
      width: 750px;
  
      height: 565px;
  
      background: #ffffff;
  
      box-shadow: 0 15px 50px rgba(0,0,0,0.1);
  
      overflow-x: hidden;
  
  
  
  }
  
  section .container .user
  
  {
  
      position: absolute;
  
      top: 0;
  
      left: 0;
  
      width: 100%;
  
      height: 100%;
  
      display: flex;
  
  
  
  }
  
  section .container .user .imgBx 
  
  {
  
      position: relative;
  
      width: 50%;
  
      height: 100%;
  
      background: white;
  
      transition: 0.5s;
  
  }
  
  section .container .user .imgBx img
  
  {
  
      position: absolute;
  
      top: 0;
  
      left: 0;
  
      width: 100%;
  
      height: 100%;
  
      object-fit: cover;
  
      color: black;
  
  }
  
  section .container .user .formBx
  
  {
  
      position: relative;
  
      width: 50%;
  
      height: 100%;
  
      background: #fff;
  
      display: flex;
  
      justify-content: center;
  
      align-items: center;
  
      padding: 40px;
  
      transition: 0.5s;
  
  }
  
  section .container .user .formBx form h2
  
  {
  
      font-size: 18px;
  
      font-weight: 600;
  
      text-transform: uppercase;
  
      letter-spacing: 2px;
  
      text-align: center;
  
      width: 100%;
  
      margin-bottom: 10px;
  
      margin-top: 30px;
  
      color: #555;
  
  }
  
  section .container .user .formBx form h3
  
  {
  
      font-size: 18px;
  
      font-weight: 600;
  
      letter-spacing: 2px;
  
      width: 100%;
  
      margin-bottom: 10px;
  
      color: #0D0D0D;
  
  }
  
  section .container .user .formBx form label
  
  {
  
      font-size: 18px;
  
      font-weight: 600;
  
      text-transform: uppercase;
  
      letter-spacing: 2px;
  
      text-align: center;
  
      width: 100%;
  
      margin-bottom: 10px;
  
      margin-top: 30px;
  
      margin-right: 10px;
  
      color: #555;
  
  }
  
  section .container .user .formBx form option
  
  {
  
      font-size: 12px;
  
      font-weight: 600;
  
      text-transform: uppercase;
  
      letter-spacing: 2px;
  
      text-align: center;
  
      width: 100%;
  
      margin-bottom: 10px;
  
      margin-top: 30px;
  
      margin-right: 10px;
  
      color: #555;
  
  }
  
  section .container .user .formBx form input
  
  {
  
      position: relative;
  
      width: 100%;
  
      padding: 10px;
  
      background: #f5f5f5;
  
      color: #333;
  
      border: none;
  
      outline: none;
  
      box-shadow: none;
  
      margin: 8px 0;
  
      font-size: 14px;
  
      letter-spacing: 1px;
  
      font-weight: 300;
  
  }
  
  section .container .user .formBx form input[type="submit"]
  
  {
  
      max-width: 100px;
  
      background:  #1977cc;
  
      color: #fff;
  
      cursor: pointer;
  
      font-size: 14px;
  
      font-weight: 500;
  
      letter-spacing: 1px;
  
      transition: 0.5s;
  
  }
  
  section .container .user .formBx form .signup
  
  {
  
      position: relative;
  
      margin-top: 20px;
  
      margin-bottom: 30px;
  
      font-size: 12px;
  
      letter-spacing: 1px;
  
      color: #555;
  
      text-transform: uppercase;
  
      font-weight: 300;
  
  }
  
  section .container .user .formBx form .signup a
  
  {
  
      font-weight: 600;
  
      text-decoration: none;
  
      color: #4d66f3;
  
  }
  
  section .container .signupBx
  
  {
  
      pointer-events: initial;
  
  }
  
  section .container.active .signupBx
  
  {
  
      pointer-events: none;
  
  }
  
  section .container .signupBx .formBx
  
  {
  
      left: 0;
  
  }
  
  section .container.active .signupBx .formBx
  
  {
  
      left: 100%;
  
  }
  
  section .container .signupBx .imgBx
  
  {
  
      left: 0;
  
  }
  
  section .container.active .signupBx .imgBx
  
  {
  
      left: -100%;
  
  }
  
  
  
  .alert {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 4px;
}

.alert h4 {
  margin-top: 0;
  color: inherit;
}

.alert .alert-link {
  font-weight: bold;
}

