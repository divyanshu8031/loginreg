<!DOCTYPE HTML>
<html>
    <head> 
        <Title>     
            Doctor LoggedIn
        </Title>  
        <style type=text/css>   
            
            header {  
            background-color: hsl(234, 74%, 70%);  
            position: fixed;  
            left: 0;  
            right: 0;  
            top: 5px;  
            height: 50px;  
            display: flex;  
            align-items: center;  
            box-shadow: 0 0 25px 0 black;  
            }  
            header * {  
            display: inline;  
            }  
            header li {  
            margin: 20px;  
            } 
            #header {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 10;
            }
            #content {
                margin-top: 100px;
                z-index:1;
            } 
            body {
                width: 95%;
                background:rgba(245, 156, 230, 0.2);
            }
            .charts {
                border-width:3px;  
                border-style:ridge;
                margin-right: 10px;
                margin-left: 10px;
                margin-bottom:10px;
                padding: 5px;
            } 
            </style>   
    </head>
    <body>
        <header class="header" id="header">
            <nav style="width: 100%;">
    
                <ul>  
                    <li style="float:left; clear:left">  
                         <h2 style="font-family: Lucida Console, Courier New, monospace;">EpiOne Patient Details</h2>
                    </li>  
                    <li style="float:right; clear:right">  
                        <form method="POST" action="/logout"> 
                                <input type="submit" name="" value="Logout" style="font-size: 14px;">
                         </form>
                    </li>
                </ul>
                
            </nav>
            
        </header>
        <div id="content">
            <section>
                <ul>
                    <% for(var i=0; i<patients.length; i++) {%>
                        <li style="border: 1px solid black;">
                            <span>Name of patient: </span><%= patients[i].name %>
                            <br/>
                            <span>Phone No.: </span><%= patients[i].phone %>
                            <br/>
                            <span>Email Id </span><%= patients[i].email %>
                            <br/>
                            <span>Gender: </span><%= patients[i].gender %>
                            <br/>
                            <span>Height in cm: </span><%= patients[i].height %>
                            <br/>
                            <span>Weight in kg: </span><%= patients[i].weight %>
                            <br/>
                            <span>Blood Group: </span><%= patients[i].bloodgroup %>
                            <br/>
                            <span>Age: </span><%= patients[i].age %>
                            <br/>
                        </li>
                        
                    <% } %>
                </ul>
            </section>
        </div>
    </body>
</html>